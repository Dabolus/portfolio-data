{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    // We need to also include "dom" because of
    // https://github.com/DefinitelyTyped/DefinitelyTyped/issues/60924
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib"]
}
